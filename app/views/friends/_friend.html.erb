<div id="<%= dom_id friend %>">
  <div class="p-5 mb-4 bg-body-tertiary rounded-3">
    <div class="container-fluid py-5">
      <h1 class="display-4"><%= friend.first_name %> <%= friend.last_name %></h1>
      <%= friend.email %> | <%= friend.phone %> | @<%= friend.twitter %>
      <hr class="my-4" />
      <p class="lead">This is where my bio will go</p>
      <div class="d-flex">
        <%= link_to "Edit", edit_friend_path(@friend), class:"btn btn-secondary" %>
        <%= link_to "Back", friends_path, class:"btn btn-secondary me-auto" %>
        <%= button_to "Delete", @friend, method: :delete, class:"btn btn-outline-danger mt-1" %>
      </div>
    </div>
  </div>
</div>
